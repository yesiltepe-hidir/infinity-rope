    "version": "0.2.0",
    "configurations": [
        {
            "name": "Latent-Forcing Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "justMyCode": false,
            "args": [
                "--config_path", "configs/self_forcing_dmd.yaml",
                "--logdir", "logs/self_forcing_dmd",
                "--disable-wandb"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MASTER_ADDR": "localhost",
                "CUDA_VISIBLE_DEVICES": "0",
                "RANK": "0",
                "LOCAL_RANK": "0",
                "WORLD_SIZE": "1",
                "LOCAL_WORLD_SIZE": "1",
                "MASTER_PORT": "12355"
            },
            "python": "/home/hidir/latent-forcing-env/bin/python",
            "preLaunchTask": "activate-venv"
        },
        {
            "name": "ODE Init Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "justMyCode": false,
            "args": [
                "--config_path", "configs/ode_init_debug.yaml",
                "--logdir", "data/ode_init_debug",
                "--disable-wandb"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MASTER_ADDR": "localhost",
                "CUDA_VISIBLE_DEVICES": "0",
                "RANK": "0",
                "LOCAL_RANK": "0",
                "WORLD_SIZE": "1",
                "LOCAL_WORLD_SIZE": "1",
                "MASTER_PORT": "12356",
                "NUM_NODES": "1",
                "NUM_GPUS_PER_NODE": "1",
                "ODE_PAIRS_PATH": "data/ode_pairs_lmdb",
                "WAN_MODEL_PATH": "wan_models/Wan2.1-T2V-1.3B"
            },
            "python": "/home/hidir/latent-forcing-env/bin/python",
            "preLaunchTask": "activate-venv"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}